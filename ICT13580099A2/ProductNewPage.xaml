<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ICT13580099A2.ProductNewPage">

    <Grid>
        <Image
            Source="ss.jpg"
            Aspect="Fill"/>
        
        <ScrollView>

    <StackLayout
        Orientation="Vertical"
        Margin="20">
            
        <Label
            x:Name="titleLable"
            Text="เพิ่มสินค้าใหม่"
            HorizontalTextAlignment="Center"
            FontSize="20"
            FontAttributes="Bold"
            Margin="10" />
        <Label
            Text="ชื่อสินค้า"
            TextColor="#CCEEFF"
            FontSize="14">
        </Label>
        <Entry
            x:Name="nameEntry"
            Placeholder="ชื่อสินค้า"
            BackgroundColor="White" />
        <Label
            Text="รายละเอียด"
            TextColor="#CCEEFF"
            FontSize="14"/>

        <Editor
            x:Name="descriptionEditor"
            HeightRequest="100" />
                
        <Label
            Text="หมวดสินค้า"
            TextColor="#CCEEFF"
            FontSize="14"/>
     
        <Picker
            x:Name="categoryPicker"
            Title="เลือกหมวดสินค้า"
            BackgroundColor="White" />
                
        <Label
            Text="ราคาสินค้า"
            TextColor="#CCEEFF"
            FontSize="14"/>
                
        <Entry
            x:Name="productPriceEntry"
            Placeholder="ราคาสินค้า"
            BackgroundColor="White"
            Keyboard="Numeric"/>
        <Label
            Text="ราคาขาย"
            TextColor="#CCEEFF"
            FontSize="14"/>
                
        <Entry
            x:Name="sellPriceEntry"
            Placeholder="ราคาขาย"
            BackgroundColor="White"
            Keyboard="Numeric" />
                
        <Label
            Text="สต๊อกสินค้า"
            TextColor="#CCEEFF"
            FontSize="14"/>
                
        <Entry
            x:Name="stockEntry"
            Placeholder="สต๊อกสินค้า"
            BackgroundColor="White"
            Keyboard="Numeric" />
                
        <Button
            x:Name="saveButton"
            Text="บันทึก"
            TextColor="White"
            BackgroundColor="#88DDBB"/>
                
        <Button
            x:Name="cancelButton"
            Text="ยกเลิก"
            TextColor="White"
            BackgroundColor="#FF9797" />
                
    </StackLayout>
    </ScrollView>
    </Grid>

</ContentPage>
